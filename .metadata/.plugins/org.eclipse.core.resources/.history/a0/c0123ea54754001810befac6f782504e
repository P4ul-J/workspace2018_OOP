#ifndef CARRAY_HPP_
#define CARRAY_HPP_

template<typename T, unsigned int N>
class CArray{
private:
	T* entries;
public:
	CArray(){
		entries = new T[N];
	}
	~CArray(){
		delete[] entries;
	}
	T& operator[](unsigned int index){
		return entries[index];
	}
};


#endif /* CARRAY_HPP_ */
